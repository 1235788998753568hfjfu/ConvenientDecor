{
  "multipart": [
    {
      "apply": { "model": "seasonalspice:block/unbundled_hay_block" }
    },
    {
      "when": { "top":  "true" },
      "apply": { "model": "seasonalspice:block/hay_stack/top" }
    },
    {
      "when": { "north": "true" },
      "apply": { "model": "seasonalspice:block/hay_stack/side" }
    },
    {
      "when": { "east":  "true" },
      "apply": { "model": "seasonalspice:block/hay_stack/side", "y": 90 }
    },
    {
      "when": { "south": "true" },
      "apply": { "model": "seasonalspice:block/hay_stack/side", "y": 180 }
    },
    {
      "when": { "west":  "true" },
      "apply": { "model": "seasonalspice:block/hay_stack/side", "y": 270 }
    }
  ]
}